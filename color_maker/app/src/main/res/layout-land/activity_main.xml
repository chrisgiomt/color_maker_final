<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp">

    <View
        android:id="@+id/colorBox"
        android:layout_width="262dp"
        android:layout_height="208dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="30dp"/>

    <LinearLayout
        android:layout_width="187dp"
        android:layout_height="275dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/redEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="false"
            android:hint="@string/enter_decimal_here"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <SeekBar
            android:id="@+id/redSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:progressDrawable="@drawable/red_seekbar_progress"
            android:thumb="@drawable/red_seekbar_thumb" />

        <Switch
            android:id="@+id/redSwitch"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_marginStart="-6dp"
            android:minHeight="48dp"
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:track="@drawable/switch_custom_track_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <EditText
            android:id="@+id/greenEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="false"
            android:hint="@string/enter_decimal_here"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <SeekBar
            android:id="@+id/greenSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:progressDrawable="@drawable/green_seekbar_progress"
            android:thumb="@drawable/green_seekbar_thumb" />

        <Switch
            android:id="@+id/greenSwitch"
            android:layout_width="61dp"
            android:layout_height="28dp"
            android:layout_marginStart="-6dp"
            android:minHeight="48dp"
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:track="@drawable/switch_custom_track_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml" />


        <EditText
            android:id="@+id/blueEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="16dp"
            android:autofillHints="false"
            android:hint="@string/enter_decimal_here"
            android:inputType="numberDecimal"
            android:minHeight="48dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp" />

        <SeekBar
            android:id="@+id/blueSeekBar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:progressDrawable="@drawable/blue_seekbar_progress"
            android:thumb="@drawable/blue_seekbar_thumb" />

        <Switch
            android:id="@+id/blueSwitch"
            android:layout_width="63dp"
            android:layout_height="31dp"
            android:layout_marginStart="-6dp"
            android:minHeight="48dp"
            android:thumb="@drawable/switch_custom_thumb_selector"
            android:track="@drawable/switch_custom_track_selector"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

    </LinearLayout>

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:text="@string/resetButton"
        android:textColor="#D1C4E9"
        android:layout_marginTop="0dp"
        android:layout_marginStart="14dp"/>

</LinearLayout>